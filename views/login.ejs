<% include header %>

    <div class="col-sm-6 col-sm-offset-3">
          <h1><span class="fa fa-sign-in"></span>Login</h1>

      <% if (message.length > 0) { %>
        <div class="alert alert-danger">
            <%= message %>
        </div>
      <% } %>

      <form action="/login" method="post">
          <div class="form-group">
              <label>email</label>
              <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" name="password" class="form-control">
          </div>
          <button type="submit" class="btn btn-warning btn-lg">Login</button>
      </form>
      <hr>
      <div class="row">
          <div class="col-lg-12 text-center">
            <p>
              Or log in with your social account
            </p>
            <a href="/auth/google" class="btn btn-primary"><span class="fa fa-google-plus"></span> Google</a>
            <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
            <a href="/auth/twitter" class="btn btn-primary"><span class="fa fa-twitter"></span> Twitter</a>
          </div>
      </div>
      <hr>
      <p>
        Need an accout? <a href="/signup">Signup</a>
      </p>
      <p>
        Or go <a href="/">home</a>.
      </p>
      </div>
<% include footer %>
